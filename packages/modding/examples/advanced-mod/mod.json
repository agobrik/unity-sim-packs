{
  "id": "advanced-example-mod",
  "name": "Advanced Example Mod",
  "version": "2.1.0",
  "description": "An advanced example mod demonstrating complex features like dependencies, assets, permissions, and storage",
  "author": "Steam Simulation Toolkit",
  "homepage": "https://github.com/steam-sim/toolkit",
  "repository": "https://github.com/steam-sim/toolkit/tree/main/packages/modding/examples/advanced-mod",
  "license": "MIT",
  "tags": ["example", "advanced", "tutorial", "dependencies", "assets"],
  "category": "framework",
  "compatibility": {
    "gameVersion": "^1.0.0",
    "frameworkVersion": "^1.0.0",
    "minMemory": 32768,
    "platform": ["win32", "linux", "darwin"],
    "nodeVersion": ">=14.0.0"
  },
  "dependencies": [
    {
      "id": "basic-example-mod",
      "version": "^1.0.0",
      "optional": false,
      "reason": "Demonstrates dependency system and mod interaction"
    }
  ],
  "optionalDependencies": [
    {
      "id": "utility-library-mod",
      "version": "~2.0.0",
      "reason": "Enhanced functionality when available"
    }
  ],
  "provides": ["advanced-api", "utility-functions"],
  "loadOrder": 100,
  "entryPoint": "src/index.js",
  "assets": [
    {
      "path": "assets/config.json",
      "type": "config",
      "preload": true,
      "optional": false
    },
    {
      "path": "assets/data.json",
      "type": "data",
      "preload": true,
      "optional": false
    },
    {
      "path": "assets/optional-data.json",
      "type": "data",
      "preload": false,
      "optional": true
    },
    {
      "path": "assets/scripts/helper.js",
      "type": "script",
      "preload": false,
      "optional": false
    }
  ],
  "permissions": [
    {
      "type": "file_read",
      "scope": "assets",
      "description": "Read mod assets and configuration files",
      "required": true
    },
    {
      "type": "file_write",
      "scope": "saves",
      "description": "Write game save data and mod state",
      "required": true
    },
    {
      "type": "network_access",
      "scope": "api.example.com",
      "description": "Access external API for enhanced features",
      "required": false
    },
    {
      "type": "hook_register",
      "description": "Register hooks for game events",
      "required": true
    },
    {
      "type": "scheduler_access",
      "description": "Schedule background tasks",
      "required": true
    },
    {
      "type": "mod_control",
      "scope": "basic-example-mod",
      "description": "Interact with and control the basic example mod",
      "required": false
    }
  ],
  "configuration": {
    "properties": {
      "enabled": {
        "type": "boolean",
        "title": "Enable Advanced Mod",
        "description": "Master switch for the advanced mod functionality",
        "default": true
      },
      "apiKey": {
        "type": "string",
        "title": "API Key",
        "description": "API key for external service access",
        "default": "",
        "pattern": "^[a-zA-Z0-9-_]{32,}$"
      },
      "maxConnections": {
        "type": "number",
        "title": "Max Connections",
        "description": "Maximum number of concurrent connections",
        "default": 10,
        "minimum": 1,
        "maximum": 100
      },
      "features": {
        "type": "array",
        "title": "Enabled Features",
        "description": "List of features to enable",
        "default": ["analytics", "optimization"],
        "items": {
          "type": "string",
          "enum": ["analytics", "optimization", "debugging", "experimental"]
        }
      },
      "advanced": {
        "type": "object",
        "title": "Advanced Settings",
        "description": "Advanced configuration options",
        "default": {
          "cacheSize": 1000,
          "timeout": 30000,
          "retries": 3
        },
        "properties": {
          "cacheSize": {
            "type": "number",
            "title": "Cache Size",
            "description": "Size of internal cache",
            "minimum": 100,
            "maximum": 10000
          },
          "timeout": {
            "type": "number",
            "title": "Timeout (ms)",
            "description": "Request timeout in milliseconds",
            "minimum": 1000,
            "maximum": 60000
          },
          "retries": {
            "type": "number",
            "title": "Retry Count",
            "description": "Number of retry attempts",
            "minimum": 0,
            "maximum": 10
          }
        }
      }
    },
    "required": ["enabled"],
    "groups": [
      {
        "name": "general",
        "title": "General Settings",
        "properties": ["enabled", "features"],
        "description": "Basic mod configuration"
      },
      {
        "name": "api",
        "title": "API Settings",
        "properties": ["apiKey", "maxConnections"],
        "description": "External API configuration"
      },
      {
        "name": "advanced",
        "title": "Advanced Settings",
        "properties": ["advanced"],
        "description": "Advanced configuration for power users"
      }
    ]
  },
  "hooks": [
    {
      "name": "advanced_data_processed",
      "type": "filter",
      "description": "Called when advanced data processing is complete",
      "parameters": [
        {
          "name": "data",
          "type": "object",
          "description": "Processed data object",
          "optional": false
        },
        {
          "name": "context",
          "type": "object",
          "description": "Processing context",
          "optional": true
        }
      ],
      "returnType": "object"
    },
    {
      "name": "advanced_feature_enabled",
      "type": "action",
      "description": "Called when an advanced feature is enabled",
      "parameters": [
        {
          "name": "feature",
          "type": "string",
          "description": "Feature name",
          "optional": false
        }
      ]
    }
  ]
}